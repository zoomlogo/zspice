// Define each component using macros, so that all component data is here.

// Sources:
COMPONENT(VOLTAGE_SOURCE, voltage_source, V,
    P(f64, max_voltage, 5)
    P(f64, dc_offset, NAN)
    P(f64, frequency, NAN)
    P(f64, phase_offset, 0)
)

COMPONENT(CURRENT_SOURCE, current_source, I,
    P(f64, max_current, 5)
    P(f64, dc_offset, NAN)
    P(f64, frequency, NAN)
    P(f64, phase_offset, 0)
)

// Controlled sources:
COMPONENT(VCCS, vccs, vccs,
    P(f64, gain, 1)
)

COMPONENT(VCVS, vcvs, vcvs,
    P(f64, gain, 1)
)

COMPONENT(CCCS, cccs, cccs,
    P(f64, gain, 1)
)

COMPONENT(CCVS, ccvs, ccvs,
    P(f64, gain, 1)
)


// Passive components:
COMPONENT(RESISTOR, resistor, R,
    P(f64, resistance, 1000)
    P(f64, conductance, NAN)
)

COMPONENT(CAPACITOR, capacitor, C,
    P(f64, capacitance, 0.00001)
)

COMPONENT(INDUCTOR, inductor, L,
    P(f64, inductance, 0.001)
)

// Non-linear components:
COMPONENT(DIODE, diode, D,
    P(f64, Is, 1e-14)      // saturation current
    P(f64, N, 1)           // ideality factor/emission coefficient
    P(f64, V_break, 1e99)  // Reverse breakdown voltage.
    P(f64, Vj, 0.7)        // junction voltage
    P(f64, _Vj, 0.7)       // (internal) to check convergence
    P(f64, Vcrit, NAN)     // (internal) critical voltage
    P(f64, V_T, NAN)       // thermal voltage

    P(f64, g_eq, NAN)      // equivalent conductance
    P(f64, i_eq, NAN)      // equivalent current source
)

COMPONENT(BJT, bjt, Q,
    P(f64, Is, 1e-16)      // saturation current
    P(f64, Bf, 100)        // ideal forward beta
    P(f64, Br, 1)          // ideal reverse beta
    P(f64, Nf, 1)          // forward emission coefficient
    P(f64, Nr, 1)          // reverse emission coefficient
    P(f64, Vaf, 1e99)      // forward early voltage
    P(f64, Var, 1e99)      // reverse early voltage
    P(f64, Vbe, 0.7)       // base-emitter voltage
    P(f64, Vbc, 0)         // base-collector voltage
    P(f64, _Vbe, 0.7)      // (internal) to check convergence
    P(f64, _Vbc, 0)        // (internal) to check convergence
    P(f64, Vcritf, NAN)    // (internal) critical voltage BE
    P(f64, Vcritr, NAN)    // (internal) critical voltage BC
    P(f64, V_T, NAN)       // thermal voltage

    P(f64, g_pi, NAN)      // input conductance
    P(f64, g_mu, NAN)      // feedback conductance
    P(f64, g_mf, NAN)      // forward transconductance
    P(f64, g_mr, NAN)      // reverse transconductance
    P(f64, g_o, NAN)       // output conductance because of early effect
    P(f64, i_be, NAN)      // equivalent current source for BE
    P(f64, i_bc, NAN)      // equivalent current source for BC
)
